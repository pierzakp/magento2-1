<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Riskified\Decider\Block\Js"
                   name="riskified_decider_js"
                   as="riskified_decider_js"
                   template="riskified_js.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="riskifiedBeacon" xsi:type="array">
                                <item name="component" xsi:type="string">Riskified_Decider/js/view/beacon</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>